<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/pwanchor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:onClick="onDropdownClick"
                android:background="@drawable/dropdown_selector">

    <TextView android:id="@+id/categoryselectbox"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="18dp"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="8dp"
              android:text="@string/categories"/>

    <ImageView android:id="@+id/categoryexpand"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:background="@drawable/navigation_expand" />

</RelativeLayout>